
@{
    ViewData["Title"] = "Medico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div>
            <div class="container-fluid">

                <!-- Información General del Niño-->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card-box">
                                <div class="d-print-none">
                                    <div class="float-right">
                                        <!--<a href="javascript:window.print()" class="btn btn-dark waves-effect waves-light"><i class="fa fa-print"></i></a> -->
                                        <a href="https://localhost:44364/Ninos/VerExpediente" class="btn btn-primary waves-effect waves-light">General</a>
                                        <a href="https://localhost:44364/Ninos/Educativo" class="btn btn-primary waves-effect waves-light">Educativo</a>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <h4 class="header-title">Expediente Médico</h4>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="p-2">
                                            <form class="form-horizontal" role="form">
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="cedulaNino">Número de cédula</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="cedulaNino" class="form-control" placeholder="Ingrese el número de cédula">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Nombre</label>
                                                    <div class="col-md-10">
                                                        <input type="text" class="form-control" disabled="" value="">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Primer apellido</label>
                                                    <div class="col-md-10">
                                                        <input type="text" class="form-control" disabled="" value="">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Segundo apellido</label>
                                                    <div class="col-md-10">
                                                        <input type="text" class="form-control" disabled="" value="">
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Padece una discapacidad?</label>
                                                    <div class="col-md-10">
                                                        <select class="form-control">
                                                            <option>Seleccione una opción</option>
                                                            <option>Si</option>
                                                            <option>No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="discapacidad">Discapacidad</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="discapacidad" class="form-control" placeholder="Ingrese la discapacidad que padece">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Padece una enfermedad?</label>
                                                    <div class="col-md-10">
                                                        <select class="form-control">
                                                            <option>Seleccione una opción</option>
                                                            <option>Si</option>
                                                            <option>No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="Enfermedad">Enfermedad</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="Enfermedad" class="form-control" placeholder="Ingrese la enfermedad que padece">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Utiliza medicamentos?</label>
                                                    <div class="col-md-10">
                                                        <select class="form-control">
                                                            <option>Seleccione una opción</option>
                                                            <option>Si</option>
                                                            <option>No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="medicamentos">Medicamentos</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="medicamentos" class="form-control" placeholder="Ingrese los medicamentos">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="indicaciones">Indicaciones</label>
                                                    <div class="col-md-10">
                                                        <textarea class="form-control" rows="5" id="indicaciones"></textarea>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="carnetVacunas">Carnet de vacunas</label>
                                                    <div class="col-md-10">
                                                        <input type="file" class="form-control" id="carnetVacunas">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="carnetCitas">Carnet de citas</label>
                                                    <div class="col-md-10">
                                                        <input type="file" class="form-control" id="carnetCitas">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="archivoEvolucion">Evolución médica</label>
                                                    <div class="col-md-10">
                                                        <input type="file" class="form-control" id="archivoEvolucion">
                                                    </div>
                                                </div>
                                                </br>
                                                <div class="form-group row">
                                                    <div class="col-md-2">
                                                    </div>
                                                    <div class="col-md-10">
                                                        <input id="btnCambiosMedicos" type="submit" value="Guardar cambios" class="btn btn-bordered-success waves-effect  width-md waves-light" />
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <!-- end row -->
                                    </div> <!-- end card-box -->
                                </div><!-- end col -->
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
