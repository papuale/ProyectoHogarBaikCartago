@model hogarbaik.Entidades.clsNino
@{
    ViewData["Title"] = "NuevoExpediente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Start Page Content here -->
<!-- ============================================================== -->
<br />

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div>
            <div class="container-fluid">

                <!-- Información General del Niño-->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card-box">
                                <h4 class="header-title">Información General</h4>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="p-2">
                                            @*<form class="form-horizontal" role="form">*@
                                                @using (Html.BeginForm("RegistroNino", "Ninos", FormMethod.Post))
                                                {
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label" for="cedulaNino">Número de cédula</label>
                                                        <div class="col-md-10">
                                                            @*<input type="text" id="cedulaNino" class="form-control" placeholder="Ingrese el número de cédula">*@
                                                            @Html.TextBoxFor(Model => Model.PkCedula, new { @class = "form-control", @placeholder = "Ingrese el número de cédula", @id = "pkCedula" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label" for="nombreNino">Nombre</label>
                                                        <div class="col-md-10">
                                                            @*<input type="text" id="nombreCompletoNino" class="form-control" placeholder="Ingrese el nombre">*@
                                                            @Html.TextBoxFor(Model => Model.Nombre, new { @class = "form-control", @placeholder = "Ingrese el nombre", @id = "Nombre" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label" for="primerApellidoNino">Primer apellido</label>
                                                        <div class="col-md-10">
                                                            @*<input type="text" id="primerApellidoNino" class="form-control" placeholder="Ingrese el primer apellido">*@
                                                            @Html.TextBoxFor(Model => Model.PrimerApellido, new { @class = "form-control", @placeholder = "Ingrese el primer apellido", @id = "PrimerApellido" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-md-2 col-form-label" for="segundoApellidoNino">Segundo apellido</label>
                                                        <div class="col-md-10">
                                                            @*<input type="text" id="segundoApellidoNino" class="form-control" placeholder="Ingrese el segundo apellido">*@
                                                            @Html.TextBoxFor(Model => Model.SegundoApellido, new { @class = "form-control", @placeholder = "Ingrese el  segundo apellido", @id = "SegundoApellido" })
                                                        </div>
                                                    </div>
                                                    <div style="text-align:right">
                                                        <button type="submit" class="btn btn-success btn-rounded width-md waves-effect waves-light">Registrar</button>
                                                    </div>
                                                }
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="fechaNacimientoNino">Fecha de nacimiento</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control" id="fechaNacimientoNino" type="date" name="fechaNacimientoNino">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Edad</label>
                                                    <div class="col-md-10">
                                                        <select class="form-control">
                                                            <option>Seleccione una opción</option>
                                                            <option>-1 año</option>
                                                            <option>1 año</option>
                                                            <option>2 años</option>
                                                            <option>3 años</option>
                                                            <option>4 años</option>
                                                            <option>5 años</option>
                                                            <option>6 años</option>
                                                            <option>7 años</option>
                                                            <option>8 años</option>
                                                            <option>9 años</option>
                                                            <option>10 años</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="archivoConstanciaNac">Constancia de nacimiento</label>
                                                    <div class="col-md-10">
                                                        <input type="file" class="form-control" id="archivoConstanciaNac">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Estado</label>
                                                    <div class="col-md-10">
                                                        <select class="form-control">
                                                            <option>Seleccione una opción</option>
                                                            <option>Activo</option>
                                                            <option>Inactivo</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            <@*/form>*@
                                        </div>
                                    </div>

                                </div>
                                <!-- end row -->
                            </div> <!-- end card-box -->
                        </div><!-- end col -->
                    </div>
                    <!-- end row -->
                    <!-- Información de Ingreso-->
                    <div class="row">
                        <div class="col-12">
                            <div class="card-box">
                                <h4 class="header-title">Detalles de Ingreso</h4>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="p-2">
                                            <form class="form-horizontal" role="form">
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="fechaIngreso">Fecha de ingreso</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control" id="fechaIngreso" type="date" name="fechaIngreso">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="nombreProfesionalIngreso">Profesional que lo ingresa</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="nombreProfesionalIngreso" class="form-control" placeholder="Ingrese el nombre completo">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="cedulaProfesionalIngreso">Cédula del profesional</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="cedulaProfesionalIngreso" class="form-control" placeholder="Ingrese el número de cédula">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="motivoIngreso">Motivo del ingreso</label>
                                                    <div class="col-md-10">
                                                        <textarea class="form-control" rows="5" id="motivoIngreso"></textarea>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="oficinaInicio">Oficina que inicia el caso</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="oficinaInicio" class="form-control" placeholder="Ingrese la ubicación de la oficina local">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Contacto</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control" type="tel" name="contactoOficina" placeholder="Ingrese el número de la oficina local">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="correoOficina">Correo electrónico</label>
                                                    <div class="col-md-10">
                                                        <input type="email" id="correoOficina" name="correoOficina" class="form-control" placeholder="Ingrese el correo electrónico de la oficina local">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="archivoIngreso">Documento de ingreso</label>
                                                    <div class="col-md-10">
                                                        <input type="file" class="form-control" id="archivoIngreso">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Padece una enfermedad?</label>
                                                    <div class="col-md-10">
                                                        <select class="form-control">
                                                            <option>Seleccione una opción</option>
                                                            <option>Si</option>
                                                            <option>No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="Enfermedad">Enfermedad</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="Enfermedad" class="form-control" placeholder="Ingrese la enfermedad que padece">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Utiliza medicamentos?</label>
                                                    <div class="col-md-10">
                                                        <select class="form-control">
                                                            <option>Seleccione una opción</option>
                                                            <option>Si</option>
                                                            <option>No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="medicamentos">Medicamentos</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="medicamentos" class="form-control" placeholder="Ingrese los medicamentos">
                                                    </div>
                                                </div>
                                                <br />
                                            </form>
                                        </div>
                                    </div>

                                </div>
                                <!-- end row -->

                            </div> <!-- end card-box -->
                        </div><!-- end col -->
                    </div>
                    <!-- end row -->
                    <!-- Información de Egreso-->
                    <div class="row">
                        <div class="col-12">
                            <div class="card-box">
                                <h4 class="header-title">Detalles de Egreso</h4>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="p-2">
                                            <form class="form-horizontal" role="form">
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="fechaEgreso">Fecha de egreso</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control" id="fechaEgreso" type="date" name="fechaEgreso">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="nombreProfesionalEgreso">Profesional que lo egresa</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="nombreProfesionalEgreso" class="form-control" placeholder="Ingrese el nombre completo">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="cedulaProfesionalEgreso">Cédula del profesional</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="cedulaProfesionalEgreso" class="form-control" placeholder="Ingrese el número de cédula">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="detallesRelevantes">Detalles relevantes</label>
                                                    <div class="col-md-10">
                                                        <textarea class="form-control" rows="5" id="detallesRelevantes"></textarea>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="personaRespnsable">Persona responsable</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="personaRespnsable" class="form-control" placeholder="Ingrese el nombre completo">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label">Contacto</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control" type="tel" name="contactoResponsable" placeholder="Ingrese el número de la oficina local">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="archivoEgreso">Documento de egreso</label>
                                                    <div class="col-md-10">
                                                        <input type="file" class="form-control" id="archivoEgreso">
                                                    </div>
                                                </div>
                                                </br>
                                                <div class="form-group row">
                                                    <div class="col-md-2">

                                                    </div>
                                                    <div class="col-md-10">
                                                        <input id="btnAgregarExpediente" type="submit" value="Agregar nuevo expediente" class="btn btn-bordered-success waves-effect  width-md waves-light" />
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->
<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->
@section Scripts {
    "/Funciones/ConsultaFactura.js"
}