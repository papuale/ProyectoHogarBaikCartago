
@{
    ViewData["Title"] = "Inicio de Sesion Hogar Baik";
    Layout = "~/Views/Shared/_LayoutBlanco.cshtml";
}

@using (Html.BeginForm("IniciarSesion", "InicioSesion", FormMethod.Post))
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
        <meta content="Coderthemes" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="~/assets/images/logo-baik.png">

        <!-- Bootstrap Css -->
        <link href="~/assets/css/bootstrap.min.css" id="bootstrap-stylesheet" rel="stylesheet" type="text/css" />
        <!-- Icons Css -->
        <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
        <!-- App Css-->
        <link href="~/assets/css/app.min.css" id="app-stylesheet" rel="stylesheet" type="text/css" />

    </head>


    <body @*class="authentication-bg"*@>

        <div class="account-pages mt-5 mb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="text-center">
                            <a href="index.html" class="logo">
                                <br />
                                <img src="~/assets/images/logo-baik.png" alt="" height="130" class="logo-light mx-auto">
                                <img src="~/assets/images/logo-baik.png" alt="" height="130" class="logo-dark mx-auto">
                            </a>
                            <br />
                            <br />
                        </div>
                        <div class="card">

                            <div class="card-body p-4">

                                <div class="text-center mb-4">
                                    <h4 class="text-uppercase mt-0">INICIO DE SESIÓN</h4>
                                </div>

                                <form action="#">

                                    <div class="form-group mb-3">
                                        <label for="emailaddress">Nombre de Usuario</label>
                                        <input class="form-control" type="text" id="emailaddress" required="" placeholder="Ingrese su usuario">
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="password">Contraseña</label>
                                        <input class="form-control" type="password" required="" id="password" placeholder="Ingrese su contraseña">
                                    </div>

                                    <div class="form-group mb-0 text-center">
                                        <input id="btnInicioSesion" type="submit" value="Iniciar Sesión" class="btn btn-primary btn-block" href="~/Views/Ninos/NinosActivos" />
                                    </div>

                                </form>

                            </div> <!-- end card-body -->
                        </div>
                        <!-- end card -->

                    </div> <!-- end col -->
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end page -->
        <!-- Vendor js -->
        <script src="~/assets/js/vendor.min.js"></script>

        <!-- App js -->
        <script src="~/assets/js/app.min.js"></script>



    </body>
</html>
}


