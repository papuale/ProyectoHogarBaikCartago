
@{
    ViewData["Title"] = "Solicitudes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!-- Start Page Content here -->
<!-- ============================================================== -->
@using (Html.BeginForm("AprobadoNegado", "Socio", FormMethod.Post))
{
    <div class="content-page">
        <div class="content">

            <!-- Start Content-->
            <div class="container-fluid">

                @if (@ViewBag.MensajeAprobado != null)
                {
                    <h3 class="alert alert-success">@ViewBag.MensajeAprobado</h3>
                }
                else if (@ViewBag.MensajeNegado != null)
                {
                    <h3 class="alert alert-danger">@ViewBag.MensajeNegado</h3>
                }


                <div class="row">
                    <div class="col-12">
                        <div class="card-box">

                            <div class="row">
                                <div class="col-sm-10">
                                    <h4>Solicitudes de Socios</h4>
                                </div>

                                <div class="col-sm-2">
                                </div>

                            </div>
                            <br />
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                                <thead>
                                    <tr>
                                        <th style="text-align:center">Cédula</th>
                                        <th style="text-align:center">Nombre</th>
                                        <th style="text-align:center">Primer Apellido</th>
                                        <th style="text-align:center">Segundo Apellido</th>
                                        <th style="text-align:center">Provincia</th>
                                        <th style="text-align:center">Dirección</th>
                                        <th style="text-align:center">Teléfono</th>
                                        <th style="text-align:center">Correo Electrónico</th>
                                        <th style="text-align:center">Donación Mensual</th>
                                        <th style="text-align:center">Forma de Pago</th>
                                        <th style="text-align:center"></th>
                                    </tr>
                                </thead>


                                <tbody>
                                    <tr>
                                        <td style="text-align:center">305150299</td>
                                        <td style="text-align:center">Marcela</td>
                                        <td style="text-align:center">Fernandez</td>
                                        <td style="text-align:center">Badilla</td>
                                        <td style="text-align:center">Cartago</td>
                                        <td style="text-align:center">500 mts Oeste de la iglesia del Tejar</td>
                                        <td style="text-align:center">8888-8888</td>
                                        <td style="text-align:center">MFernandez@gmail.com</td>
                                        <td style="text-align:center">20000</td>
                                        <td style="text-align:center">Efectivo</td>
                                        <td style="text-align:center">

                                            <input id="submit" class="btn btn-bordered-success waves-effect  width-md waves-light" height="30" type="submit" value='Aprobado' name="submit" />
                                            <input id="submit" class="btn btn-bordered-danger waves-effect  width-md waves-light" height="30" type="submit" value='Negado' name="submit" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- end row -->




            </div> <!-- container-fluid -->

        </div> <!-- content -->


    </div>

    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->

}


