
@{
    ViewData["Title"] = "ModificarMuebles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Page Content here -->
<!-- ============================================================== -->
<br />

    <div class="content-page">
        <div class="content">

            <!-- Start Content-->
            <div>
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-12">
                            <div class="card-box">
                                <h4>Formulario Inventario de Muebles</h4>

                                <br />

                                <div class="row">
                                    <div class="col-12">
                                        <div class="p-2">
                                            <form class="form-horizontal" role="form">

                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="simpleinput">Código</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="simpleinput" value="01" class="form-control" placeholder="Digite el código" required>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="example-textarea">Nombre</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="simpleinput" value="Vehiculo" class="form-control" placeholder="Ingrese el nombre" required>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="example-textarea">Descripción</label>
                                                    <div class="col-md-10">
                                                        <textarea class="form-control" rows="5" id="example-textarea" placeholder="Ingrese la descripción" required>Toyota Tacoma 2008</textarea>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="example-textarea">Cantidad</label>
                                                    <div class="col-md-10">
                                                        <input type="number" id="simpleinput" class="form-control" value="1" placeholder="Digite la cantidad" required>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="example-textarea">Placa</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="simpleinput" class="form-control" value="123456" placeholder="Digite la placa" required>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="example-date">Fecha de Adquisición</label>
                                                    <div class="col-md-10">
                                                        <input class="form-control" value="25/03/2021" id="example-date" type="date" name="date" required>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-md-2 col-form-label" for="simpleinput">Adquisición</label>
                                                    <div class="col-md-10">
                                                        <input type="text" id="simpleinput" value="Donación JPS" class="form-control" placeholder="Ingrese la adquisición" required>
                                                    </div>
                                                </div>


                                                <br />
                                                <div class="form-group row">
                                                    <div class="col-md-2">

                                                    </div>
                                                    <div class="col-md-10">

                                                        <input id="Submit1" type="submit" value="Agregar Cambios al Inventario" class="btn btn-bordered-success waves-effect  width-md waves-light" onclick="location.href='/Inventario/InventarioMuebles'" />
                                                        <input id="Submit1" type="submit" value="Eliminar Inventario" class="btn btn-bordered-danger waves-effect  width-md waves-light" />
                                                    </div>
                                                </div>


                                            </form>
                                        </div>
                                    </div>

                                </div>
                                <!-- end row -->

                            </div> <!-- end card-box -->
                        </div><!-- end col -->
                    </div>
                    <!-- end row -->
                </div>
            </div> <!-- container-fluid -->

        </div> <!-- content -->


    </div>

    <!-- ============================================================== -->
    <!-- End Page content -->
